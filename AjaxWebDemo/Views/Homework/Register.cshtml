@section Styles{
    <style>
        .accountExisted{
            color:red;
        }

        .accountNotExisted{
            color:green;
        }
    </style>
}
@section Scripts {
   <script>
       let txtName = document.getElementById('txtName');
       let checkResult = document.getElementById('checkResult');
       
       let xhr=new XMLHttpRequest();

       xhr.addEventListener('load',()=>{
        
           let result=xhr.responseText;
           console.log(result);
           if(result=='1'){
                checkResult.innerHTML='該帳號已存在';
                checkResult.classList.add('accountExisted');
                checkResult.classList.remove('accountNotExisted');
           }else{
                checkResult.innerHTML = '該帳號可註冊';
                checkResult.classList.add('accountNotExisted');
                checkResult.classList.remove('accountExisted');
           }
       });

        txtName.addEventListener('change',()=>{
            checkResult.innerHTML = '';
            if (txtName.value.trim()=='')
                return false;
           
           xhr.open('POST', '/api/NameCheck');
           xhr.setRequestHeader('Content-Type','application/x-www-form-urlencoded');
           xhr.send(`name=${txtName.value}`);
        });
       
   </script>
}
